{
  "name": "raptor/test-utils",
  "description": "Testing utils for PHP",
  "license": "MIT",
  "require": {
    "php": ">=7.3.0",
    "symfony/console": "^4.0",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "8.*",
    "mockery/mockery": "1.2.*",
    "mikey179/vfsstream": "1.6.*",
    "phpmd/phpmd": "@stable",
    "squizlabs/php_codesniffer": "3.4.*",
    "slevomat/coding-standard": "~4.0",
    "roave/security-advisories": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "Raptor\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "RaptorTests\\": "tests/"
    }
  },
  "scripts": {
    "test-all": "./vendor/bin/phpunit --colors=always --configuration=all_tests.xml"
  }
}
